<div class="row">
    <div class="col s8 offset-s2">
{{#each ideas}}
<div class="card-panel">
  <h5 class="center"> {{title}}</h5> 
  <div class="divider"></div>
<p>{{details}}</p>
<div>
    <div class="center">
        <div class="row">
    <a class="btn blue col s12" href="/idea/edit/{{id}}" style="margin:3px"> Edit</a> 
      <form action="/idea/delete/{{id}}?_method=DELETE" method="POST">
         <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="Delete" class="btn red col s12">
    </form>
    </div>
    </div>
  
</div>
     </div>
{{else}}
<div class="card-panel center">
    <p> Sorry, No Idea Found .. <a href="/idea/add">Add one Here</a></p>
</div>
{{/each}}
    </div>
</div>